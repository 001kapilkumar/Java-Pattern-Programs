public class Pattern_17 {
    public static void main(String [] args){
        int row = 5 ;
        int n = 1 ;
        for(int i = 1; i <=row ; i++){
            for(int j = i ; j<row ; j++){
                System.out.print(" ");
            }
            for(int j =0 ; j <(2*i-1) ; j++){
                System.out.print( "*" ) ;
            }
            n = n+2 ;
            System.out.println() ;
        }
    }


}
